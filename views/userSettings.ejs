                }).then(
                message => {
                    if (message === 'OK') {
                        $.alert({
                        title: 'Alert!',
                        content: `An email has been send to your ${emailvalue} mailbox`,
                    });
                            $('#btn-send-otp').addClass('d-none');
                            $('#verify-div').addClass('d-flex');
